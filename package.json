{
    "name": "IdentityNowManagement",
    "version": "1.3.6",
    "main": "dist/index.js",
    "scripts": {
        "clean": "shx rm -rf ./dist",
        "prebuild": "npm run clean",
        "build": "npx ncc build ./src/index.ts -o ./dist -m -C",
        "dev": "spcx run dist/index.js",
        "prettier": "npx prettier --write .",
        "test": "jest --coverage",
        "prepack-zip": "npm ci && npm run build",
        "pack-zip": "spcx package"
    },
    "private": true,
    "dependencies": {
        "@sailpoint/connector-sdk": "^1.1.3",
        "axios": "^1.3.4",
        "axios-retry": "^3.5.1",
        "cheerio": "^1.0.0-rc.12",
        "postman-request": "^2.88.1-postman.32"
    },
    "devDependencies": {
        "@types/jest": "^29.5.2",
        "@vercel/ncc": "^0.34.0",
        "cross-env": "7.0.3",
        "prettier": "^2.3.2",
        "shx": "^0.3.3",
        "ts-jest": "^29.1.0",
        "typescript": "4.3.5"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "clearMocks": true,
        "collectCoverage": true,
        "coverageThreshold": {
            "global": {
                "statements": 60,
                "branches": 50,
                "functions": 40,
                "lines": 60
            }
        }
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
